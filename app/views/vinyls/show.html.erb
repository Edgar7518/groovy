<h1>Vinyl</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
  <div class="col">
    <div class="card rouded">
      <h2><%= @vinyl.title %></h2>
      <img class="card-img-top"><%=image_tag(@vinyl.photo_url)%>
      <strong>Year:</strong>
      <%= @vinyl.year %>
      <strong>Artist:</strong>
      <%= @vinyl.artist.name %>
      <strong>Genre:</strong>
      <%= @vinyl.genre.name %>
    </div>
  </div>
</div>

  <div class="container", style="width: 200%; height: 200px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_TOKEN'] %>">
  </div>

  <ul>
    <% @collections_vinyls.each do |collection| %>
    <%= collection.user.email %>
    <%= link_to 'Je le veux', new_collections_vinyl_exchange_path(collection), class: "btn btn-info" %>
    <% end %>
  </ul>

<%= link_to 'Return', vinyls_path, class: "btn btn-info" %>
<%= link_to 'Accueil', root_path, class: "btn btn-info" %>
