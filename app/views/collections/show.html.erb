<div class="text-center p-5" style="background-color: #FAC066">
<h1><%=@collection.name%></h1>
</div>
<div class="container">
  <div class="d-flex align-items-center mt-3">
    <i class="fa-solid fa-arrow-left"></i>
    <a><%= link_to "Retour", collections_path, class: "btn btn-retour " %></a>
  </div>
</div>

<div class= "container">
  <div class="row row-cols-1 row-cols-md-4 g-4 mt-2 text px-4 pb-4 flex-fill">
    <% @collection.vinyls.each do |vinyl| %>
    <div class="col">
      <div class ="card shadow">
        <img><%= image_tag (vinyl.photo_url), class:"vinyl_image" %>
        <div class="text p-3 flex-fill">
          <div class="vinyl-title">
            <p class="fw-bold m-0">
              <%= vinyl.title %>
            </p>
          </div>
          <p>
            <%# <strong>Artiste</strong> %>
            <%= vinyl.artist.name %>, <em><%= vinyl.year %></em>
          </p>

        </div>
      </div>
    </div>
    <% end %>

  </div>
</div>

