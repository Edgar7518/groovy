
<div class= "container">
<h1><%=@collection.name%></h1>
  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @collection.vinyls.each do |vinyl| %>
    <div class="col">
      <div class ="card shadow">
        <img><%= image_tag (vinyl.photo_url), class:"card-img-top p-3" %>
        <div class="text p-3 flex-fill">
          <h5 class="card-title"><%= vinyl.title %>(<%= vinyl.year %>)</h5>
          <p class="description"><%= vinyl.artist.name %> </p>
        </div>
      </div>
    </div>
    <% end %>

  </div>

  <div class="d-flex align-items-center mt-3">
    <i class="fa-solid fa-arrow-left"></i>
    <a><%= link_to "Retour", collections_path, class:"btn btn-retour"%></a>
  </div>

</div>


