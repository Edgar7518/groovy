<div class="head">
<div class="text-center p-5" style="background-color: #FAC066">
  <h1>Nouvelle Collection</h1>
</div>

<div class="container">
  <div class="d-flex align-items-center mt-3">
    <i class="fa-solid fa-arrow-left"></i>
    <a><%= link_to "Retour", vinyls_path, class: "btn btn-retour " %></a>
  </div>
</div>

  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-6 offset-lg-3">
        <div class="bg-white rounded p-3 shadow">

          <%= simple_form_for(@collection) do |f| %>
            <%= f.error_notification %>
              <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
                <div class="form-inputs">
                  <%= f.input :name, label: "Nom" %>
                </div>
                <div class="form-inputs">
                  <%= f.input :photo, as: :file %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit, class: "btn btn-info", value: "CrÃ©er"  %>
                </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

</div>
