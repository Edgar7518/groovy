                  </div>
                  <div class="form-inputs">
                    <%= f.input :photo, as: :file %>
                  </div>
                  <div class="form-actions">
                    <%= f.button :submit, class: "btn btn-info", value: "CrÃ©er"  %>
                    <%= link_to "Retour", collections_path, class: "btn btn-info"  %>
                  </div>
                <% end %>
          </div>
       </div>
     </div>
   </div>

</div>
